<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/aftersplashy"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main.onBoard">


  <Button
      android:id="@+id/goShoppingButton"
      android:layout_width="196dp"
      android:layout_height="50dp"
      android:layout_marginTop="620dp"
      android:backgroundTint="@color/purple_200"
      android:text="@string/GoShopping"
      android:textColor="@color/black"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/registetOnBoardTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:backgroundTint="#FFFFFF"
      android:text="@string/registervalue"
      android:textColor="@color/purple_200"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/goShoppingButton"
      app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>