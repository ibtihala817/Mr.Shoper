<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/purple_200"
    android:orientation="horizontal"
    android:padding="10dp">


    <LinearLayout
        android:id="@+id/ll_cart_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cartImage"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cart_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/cartItemTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/CartItemTitle" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">>

            <TextView
                android:id="@+id/qunitiy_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="100 SR" />

            <LinearLayout
                android:layout_width="221dp"
                android:layout_height="12dp"
                android:layout_marginLeft="60dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/minus_imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/miuns" />

                <TextView
                    android:id="@+id/quntitycart_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="1" />

                <ImageButton
                    android:id="@+id/plus_imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/plus" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/delete_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        android:isScrollContainer="true"
        app:srcCompat="@drawable/ic_baseline_delete_24"
        app:tint="@color/pink" />


</LinearLayout>